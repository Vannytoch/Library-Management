<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Layout without header and footer -->
    <template id="invoice_layout">
        <t t-if="not o" t-set="o" t-value="doc"/>
        <t t-if="not company">
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="0 and 'company_id' in o and o.company_id.sudo()">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>

        <div class="article" style="height: 1400px; max-height: 1754px; background-color: #FAF9F4 !important; padding: 80px;">
            <t t-out="0"/>
        </div>
    </template>

    <!-- Main invoice content -->
    <template id="invoice_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="qweb_pdf_report_example.invoice_layout">

                    <!-- Styles -->
                    <style>
                        html, body {
                            background-color: #FAF9F4 !important;
                        }
                        .page {
                            background-color: transparent !important;
                        }
                        .fake-table {
                            display: table;
                            width: 100%;
                            border-collapse: collapse;
                        }
                        .fake-header, .fake-row {
                            display: table-row;
                        }
                        .fake-cell {
                            display: table-cell;
                            padding: 8px;
                            text-align: left;
                            vertical-align: middle;
                        }
                        .text-center {
                            text-align: center !important;
                        }
                        .fake-header .fake-cell {
                            font-weight: bold;
                            border-bottom: 1px solid #FE542E;
                        }
                        .fake-row {
                            border-bottom: 1px solid #FE542E;
                        }
                        .no-border-wrapper {
                            padding: 0;
                            margin: 0;
                        }
                    </style>

                    <div class="page" style="font-family: 'Calibri'; font-size: 18px; color: #21335B;">
                        <!-- Invoice header -->
                        <div class="row mb-5">
                            <div class="col-6">
                                <img alt="Image is not loading..." src="/qweb_pdf_report_example/static/Crown.PNG" style="height: 150px;" />
                            </div>
                            <div class="col-6 text-end" style="font-family: 'Maiandra GD';">
                                <br/>
                                <h1 class="fw-bold" style="font-size: 50px;">Invoice</h1>
                                <p class="h3 fw-bold">INV/2024/12/0023</p>
                            </div>
                        </div>

                        <!-- Customer info -->
                        <div class="row">
                            <div class="col-6">
                                <p class="fw-bold" style="line-height: 1;">Billed to:</p>
                                <p style="margin: 0; line-height: 1.6;">
                                    Customer Name<br/>012 555 666<br/>123 Anywhere Street<br/>Phnom Penh
                                </p>
                            </div>
                            <div class="col-6 text-end">
                                <p style="line-height: 1;"><span class="fw-bold">Invoice Date</span>: 2024/12/01</p>
                                <p style="line-height: 1;"><span class="fw-bold">Due Date</span>: 2024/12/31</p>
                            </div>
                        </div>

                        <!-- Items table -->
                        <div class="no-border-wrapper mt-4">
                            <div class="fake-table">
                                <div class="fake-header">
                                    <div class="fake-cell">Item</div>
                                    <div class="fake-cell text-center">Quantity</div>
                                    <div class="fake-cell text-center">Unit Price</div>
                                    <div class="fake-cell text-center">Discount (%)</div>
                                    <div class="fake-cell text-center">Total</div>
                                </div>
                                <!-- Example row -->
                                <div class="fake-row">
                                    <div class="fake-cell">Wooden Blocks</div>
                                    <div class="fake-cell text-center">2</div>
                                    <div class="fake-cell text-center">10.50</div>
                                    <div class="fake-cell text-center">10%</div>
                                    <div class="fake-cell text-center">18.90</div>
                                </div>
                            </div>
                        </div>

                        <!-- Totals -->
                        <div class="row pt-2">
                            <div class="col-8"></div>
                            <div class="col-2 text-center">
                                <p><b>Subtotal</b></p>
                                <p><b>Discounts</b></p>
                                <p><b>VAT(10%)</b></p>
                            </div>
                            <div class="col-2 text-end">
                                <p>$84.00</p>
                                <p>$8.40</p>
                                <p>$7.56</p>
                            </div>
                        </div>

                        <!-- Grand Total -->
                        <div class="row pt-3">
                            <div class="col-5"></div>
                            <div class="col-7" style="background-color: #FE542E; margin-left: 130px;">
                                <div class="fake-table">
                                    <div class="fake-row fw-bold pt-2" style="font-family: 'Maiandra GD';">
                                        <div class="fake-cell text-center" style="color: white;">
                                            <h4 style="padding-left: 30px;">Total</h4>
                                        </div>
                                        <div class="fake-cell text-center" style="color: white;">
                                            <h4 style="padding-right: 60px;">$18.46</h4>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Payment Information -->
                        <h4 class="pt-4">Payment Information</h4>
                        <div class="row pt-2">
                            <div class="col-2">
                                <img alt="QR Code" class="w-100" src="/qweb_pdf_report_example/static/QR.PNG"/>
                            </div>
                            <div class="col-8 ps-3 d-flex align-items-center">
                                <h5 class="my-auto">
                                    <span class="fw-bold">ADVANCED BANK OF ASIA LIMITED (ABA BANK)</span><br/>
                                    <span class="fw-bold">Account Name:</span> <br/>
                                    <span class="fw-bold">Account No.:</span>
                                </h5>
                            </div>
                        </div>

                        <!-- Thank You Section -->
                        <div class="row pt-3">
                            <div class="col-6"></div>
                            <div class="col-6 text-center">
                                <img alt="Party Logo" class="w-100" src="/qweb_pdf_report_example/static/party.PNG"/>
                                <h3 class="mx-auto" style="font-family: 'Maiandra GD';">Thank you for supporting us!</h3>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <!-- Report Action -->
    <record id="school_student_profile_report_temp" model="ir.actions.report">
        <field name="name">Student Cart</field>
        <field name="model">student.student</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">qweb_pdf_report_example.invoice_report_template</field>
        <field name="report_file">qweb_pdf_report_example.invoice_report_template</field>
        <field name="print_report_name">'Student-Card'</field>
        <field name="binding_model_id" ref="student.model_student_student"/>
        <field name="binding_type">report</field>
    </record>
</odoo>
