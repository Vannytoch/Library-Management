<?xml version="1.0" encoding="UTF-8"?>
<templates>

    <t t-inherit="account.TaxTotalsField" t-inherit-mode="extension" owl="1">
        <xpath expr="//tr[1]" position="before">
       <!-- Discount amount with all taxes -->
            <tr>
                <td class="o_td_label">
                    <label class="o_form_label o_tax_total_label">Subtotal</label>
                </td>

                <td class="o_list_monetary">
                    <span
                        name="total_before_discount"
                        t-out="formatMonetary(totals.total_before_discount)"
                        style="font-size: 1.2em; font-weight: bold; white-space: nowrap;"
                    />
                </td>
            </tr>
            <tr>
                <td class="o_td_label">
                    <label class="o_form_label o_tax_total_label">Total Discount</label>
                </td>

                <td class="o_list_monetary">
                    <span
                        name="discount_amount"
                        t-out="formatMonetary(totals.discount_total)"
                        style="font-weight: bold; white-space: nowrap; color: red;"
                    />
                </td>
            </tr>

        </xpath>
    </t>

</templates>
