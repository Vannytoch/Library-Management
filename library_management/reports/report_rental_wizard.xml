<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--    Wizard for report-->
    <record id="view_library_rental_report_wizard" model="ir.ui.view">
        <field name="name">library.rental.report.wizard.form</field>
        <field name="model">library.rental.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Report Rentals">

                <form string="Generate Rental Report">
                    <group string="Import Data">
                        <field name="add_data" filename="file_name"/>
                        <field name="file_name"/>
                    </group>
                    <group>
                        <group string="Status">
                            <group>
                                <field name="is_draft"/>
                                <field name="is_confirmed"/>
                                <field name="is_active"/>
                            </group>
                            <group>
                                <field name="is_returned"/>
                                <field name="is_overdue"/>
                            </group>
                        </group>
                        <group string="Filter date">
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="count_data"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Generate PDF" type="object" name="action_generate_report" class="btn-primary"/>
                        <button string="Import Data" type="object" name="action_import_data" class="btn-success"/>
                        <button string="Export Data" type="object" name="action_export_data" class="btn-warning"/>
                        <button string="Cancel" class="btn-secondary ms-auto" special="cancel"/>
                    </footer>
                </form>
            </form>
        </field>
    </record>


</odoo>