<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="portal_my_library_Dashboard"
              name="Book of our library"
              customize_show="True"
              inherit_id="portal.portal_my_home"
              priority="45">
        <!-- Enable vendor category block if not already enabled -->
        <xpath expr="//div[hasclass('o_portal_docs')]" position="before">
            <t t-set="portal_vendor_category_enable" t-value="True"/>
        </xpath>
        <!-- Insert the library portal card into the vendor category -->

        <div id="portal_vendor_category" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="icon" t-value="'/library_management/static/img/library.svg'"/>
                <t t-set="title">Books Dashboard</t>
                <t t-set="text">Follow your books information in our library.</t>
                <t t-set="url" t-value="'/my/library'"/>
                <t t-set="placeholder_count" t-value="'rfq_count'"/>
            </t>
        </div>
    </template>

    <template id="library_dashboard_template">
        <t t-call="portal.portal_layout">
            <!-- Main Dashboard Container -->
            <div class="dashboard-container">
                <div class="row">
                    <!-- Left Column -->
                    <div class="col-md-6">
                        <!-- Tools Card -->
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5 class="card-title">Books Status</h5>
                                <ul class="list-group">
                                    <t t-foreach="book_status_count.items()" t-as="status">
                                        <li class="list-group-item d-flex justify-content-between">
                                            <span><t t-esc="status[0]"/></span>
                                            <span class="bg-primary text-light text-center" style="border-radius: 50%; height: 1.5em; width: 1.5em;">
                                                <t t-esc="status[1]"/>
                                            </span>
                                        </li>
                                    </t>
                                    <li class="list-group-item d-flex justify-content-between">
                                        <strong>Total Book(s)</strong><span><t t-esc="sum(book_status_count.values())"/></span>
                                    </li>
                                </ul>
                            </div>
                        </div>

                        <div class="card mb-3">
                            <div class="card-body">
                                <h5 class="card-title">Book Genre</h5>
                                <ul class="list-group">
                                    <t t-foreach="book_genre_count.items()" t-as="genre">
                                        <li class="list-group-item d-flex justify-content-between">
                                            <span><t t-esc="genre[0]"/></span>
                                            <span class="bg-primary text-light text-center" style="border-radius: 50%; height: 1.5em; width: 1.5em;">
                                                <t t-esc="genre[1]"/>
                                            </span>
                                        </li>
                                    </t>
                                    <li class="list-group-item d-flex justify-content-between">
                                        <span>Total</span><span><t t-esc="sum(book_genre_count.values())"/></span>
                                    </li>

                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <!-- Circulation Trends Graph -->

                        <div class="card mb-3">
                            <div class="card-body">
                                <h5 class="card-title">Rental Trends</h5>
                                <div class="graph-container">
                                    <canvas id="trendChart"></canvas>
                                </div>
                                <div class="row text-center mt-2">
                                    <t t-foreach="rental_per_mount.items()" t-as="month">
                                        <div class="col">
                                            <span class="small-stat">
                                                <t t-esc="month[1]"/>
                                            </span>
                                            <div class="stat-label">
                                                    <t t-esc="month[0]"/>
                                            </div>
                                        </div>
                                    </t>
                                </div>
                            </div>
                        </div>

                        <div class="card mb-3">
                            <div class="card-body">
                                <h5 class="card-title">Rental State</h5>
                                <div class="graph-container">
                                    <canvas id="trendChart"></canvas>
                                </div>
                                <div class="row text-center mt-2">
                                    <t t-foreach="rental_state_count.items()" t-as="state">
                                        <div class="col">
                                            <span class="small-stat">
                                                <t t-esc="state[1]"/>
                                            </span>
                                            <div class="stat-label">
                                                    <t t-esc="state[0]"/>
                                            </div>
                                        </div>
                                    </t>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
     <template id="portal_dashboard_breadcrumbs" inherit_id="portal.portal_breadcrumbs">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'library_dashboard'" class="breadcrumb-item">
                Dashboard
            </li>
        </xpath>
    </template>
</odoo>