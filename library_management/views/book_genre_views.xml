<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="library_book_genre_list_view" model="ir.ui.view">
            <field name="name">library.book.genre.list.view</field>
            <field name="model">library.book.genre</field>
            <field name="arch" type="xml">
                <list editable="bottom" create="1">
                    <field name="name"/>
                </list>
            </field>
        </record>

        <record id="library_book_genre_action" model="ir.actions.act_window">
            <field name="name">Genre</field>
            <field name="res_model">library.book.genre</field>
            <field name="view_mode">list</field>
        </record>

        <menuitem id="library_book_genre_menu" name="Genre" parent="library_book_sub_menu" action="library_book_genre_action"/>
    </data>
</odoo>
