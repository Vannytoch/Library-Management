<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="library_member_list_view" model="ir.ui.view">
            <field name="name">library.member.list.view</field>
            <field name="model">library.member</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="dob" optional="hide"/>
                    <field name="gender" optional="hide"/>
                    <field name="email"/>
                    <field name="address" optional="hide"/>
                    <field name="membership_id" optional="hide"/>
                    <field name="membership_type" optional="show"/>
                    <field name="expiry_date" optional="hide"/>
                    <field name="contact"/>
                </list>
            </field>
        </record>
        <record id="library_member_form_view" model="ir.ui.view">
            <field name="name">library.member.form.view</field>
            <field name="model">library.member</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="dob"/>
                                <field name="gender"/>
                                <field name="institution"/>
                                <field name="email"/>
                                <field name="address"/>
                                <field name="membership_id"/>
                                <field name="membership_type"/>
                            </group>
                            <group>
                                <field name="image_1920" widget="image"/>
                                <field name="contact"/>
                                <field name="expiry_date"/>
                            </group>
                        </group>
                    </sheet>
                     <chatter/>
                </form>
            </field>
        </record>

        <record id="library_member_action" model="ir.actions.act_window">
            <field name="name">Membership</field>
            <field name="res_model">library.member</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="library_member_menu" name="Membership" parent="library_book_root_menu" action="library_member_action"/>

    </data>
</odoo>