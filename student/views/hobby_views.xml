<odoo>
  <data>
    <!-- explicit list view definition -->
    <record id="student_hobby_list_view" model="ir.ui.view">
      <field name="name">student.hobby.list.view</field>
      <field name="model">student.hobby</field>
      <field name="arch" type="xml">
        <list limit="5" open_form_view="True" editable="bottom">
          <field name="id" optional="hide"/>
          <field name="name"/>
        </list>
      </field>
    </record>

  <record id="student_hobby_form_view" model="ir.ui.view">
    <field name="name">student.hobby.form</field>
    <field name="model">student.hobby</field>
    <field name="arch" type="xml">
      <form string="Hobby Form">
        <sheet>
          <group>
            <field name="name"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>


   <record id="student_hobby_action" model="ir.actions.act_window">
    <field name="name">Hobby</field>
    <field name="res_model">student.hobby</field>
    <field name="view_mode">list,form</field>
  </record>

<!--  <menuitem id="student_hobby_root_menu" name="Students" sequence="10"/>-->
  <menuitem id="student_hobby_menu" name="Hobby Records" parent="student_student_root_menu" action="student_hobby_action"/>


  </data>
</odoo>
