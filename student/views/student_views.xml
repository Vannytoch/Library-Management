<odoo>
  <data>

    <record id="student_student_search_view" model="ir.ui.view">
      <field name="name">student.student.search.view</field>
      <field name="model">student.student</field>
      <field name="arch" type="xml">
        <search>
          <filter name="create_date" string="Create Date" date="create_date"/>
          <filter name="7_days" string="7 days"
                  domain="[('create_date', '&gt;', datetime.datetime.combine(context_today() - relativedelta(days=7), datetime.time(23,59,59)).to_utc())]"
                  />
          <filter name="14_days" string="14 days"
                  domain="[('create_date', '&gt;', datetime.datetime.combine(context_today() - relativedelta(days=14), datetime.time(23,59,59)).to_utc())]"
                  />
          <filter name="30_days" string="30 days"
                  domain="[('create_date', '&gt;', datetime.datetime.combine(context_today() - relativedelta(days=30), datetime.time(23,59,59)).to_utc())]"
                  />

          <field name="name"/>
          <field name="school_id"/>
          <field name="gender"/>

          <filter name="student_name" domain="[('name', 'ilike', '%test%')]" string="Student test"/>
          <filter name="school_name" domain="[('school_id', 'ilike', '%ITC%')]" string="School ITC"/>
          <filter name="gender_male_filter" domain="[('gender', '=', 'male')]" string="Gender male"/>
          <filter name="gender_female_filter" domain="[('gender', '=', 'female')]" string="Gender female"/>

          <group>
            <filter name="gender_group_by"
                    context="{'group_by':'gender'}"
                    domain="[]"
                    string="Gender"/>
            <separator />
            <filter name="school_group_by"
                    context="{'group_by':'school_id'}"
                    domain="[]"
                    string="School"/>
          </group>

          <searchpanel>
            <field name="gender" string="Gender" select="multi" icon="fa-truck" color="#875A7B"/>
            <field name="school_id" string="School" enable_counters="1" icon="fa-cutlery" color="red"/>
          </searchpanel>
        </search>
      </field>
    </record>

    <!-- explicit list view definition -->
    <record id="student_student_list_view" model="ir.ui.view">
      <field name="name">student.student.list.view</field>
      <field name="model">student.student</field>
      <field name="arch" type="xml">
        <list>
          <header>
            <button name="abc_test" type="object" string="Click me" display="always"/>
          </header>
          <field name="sequence" widget="handle"/>
          <field name="sequence"/>
          <field name="id" optional="hide"/>
          <field name="name" decoration-info="1"/>
          <field name="email" decoration-warning="1"/>
          <field name="school_id" decoration-primary="1"/>
          <groupby name="school_id">
            <button type="edit" name="edit" icon="fa-edit" title="edit"/>
          </groupby>
          <field name="age" decoration-muted="1"/>
          <field name="gender"/>
          <field name="student_fees" sum="Total fees" decoration-danger="1"/>
          <field name="discount_fees" decoration-danger="1"/>
          <field name="final_fees" avg="Average of Final Fees" decoration-success="1"/>
            <field name="status"/>
        </list>
      </field>
    </record>

    <record id="student_student_form_view" model="ir.ui.view">
    <field name="name">student.student.form</field>
    <field name="model">student.student</field>
    <field name="arch" type="xml">
      <form string="Student Form">
        <header>
          <button name="json_data_store"
                string="Generate School Data"
                type="object"
                class="btn-primary"/>
          <button name="delete_records"
                string="Delete or Remove Record"
                type="object"
                class="btn-primary"/>
              <field name="status" widget="statusbar" options="{'clickable':1}"/>

      </header>
        <sheet>
          <group>
            <field name="hobby_list" widget="many2many_tags"/>
            <field name="name"/>
              <field name="status" />
              <field name="student_image" widget="image" />
            <!-- Uncomment if you want to select school -->
            <field name="school_id"/>
            <field name="email"/>
            <field name="age"/>
            <field name="gender"/>
            <field name="joining_date"/>
            <field name="date_of_birth"/>
            <field name="student_fees"/>
            <field name="discount_fees"/>
            <field name="final_fees"/>
            <field name="start_date"/>
            <field name="end_date"/>
            <field name="test"/>
            <field name="address"/>
            <field name="phone"/>

          </group>

        </sheet>
      </form>
    </field>
  </record>

    <record id="student_student_kanban_view" model="ir.ui.view">
      <field name="name">student.student.kanban.view</field>
      <field name="model">student.student</field>
      <field name="arch" type="xml">
        <kanban class="o_kanban_mobile" default_group_by="status">
          <progressbar field="status"
                       sum_field="student_fees"
                       colors='{"Draft":"success", "In Progress":"warning", "Finish":"danger"}'
          />
          <templates>
              <field name="status"/>
            <t t-name="card">
              <div class="row">
                <div class="col-4">
                  <aside class="o_kanban_aside_full">
                    <div class="o_kanban_image_fill position-relative w-100 m-1">
                      <field name="student_image" class="h-100" widget="image" option="{'img_class':'object-fit-cover'}"/>
                    </div>
                  </aside>
                </div>
                <div class="col-4">
                  <field name="name" class="fw-bolder"/>
                </div>
                <div class="col-4">
                  <field name="student_fees" class="badge rounded-pill"/>
                </div>
              </div>
              <div>
                <strong>
                  School:
                </strong>
                <field name="school_id"/>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>

    <record id="student_profile_graph_view" model="ir.ui.view">
      <field name="name">student.profile.graph.view</field>
      <field name="model">student.student</field>
      <field name="arch" type="xml">
        <graph string="Student Graph">
          <field name="name"/>
          <field name="create_date"/>
          <field name="school_id"/>
          <field name="gender"/>
        </graph>
      </field>
    </record>

    <record id="student_profile_pivot_view" model="ir.ui.view">
      <field name="name">student.profile.pivot.view</field>
      <field name="model">student.student</field>
      <field name="arch" type="xml">
        <pivot string="Form Student Pivot View">
          <field name="school_id" type="row"/>
          <field name="name"/>
          <field name="create_date" type="col" interval="day"/>
        </pivot>
      </field>
    </record>

    <record id="student_student_action" model="ir.actions.act_window">
      <field name="name">Students</field>
      <field name="res_model">student.student</field>
      <field name="view_mode">list,form,kanban,graph,pivot</field>
      <field name="context">{'search_default_30_days':1}</field>
    </record>

    <menuitem id="student_student_root_menu" name="Students" sequence="10"/>

    <menuitem id="student_student_menu" name="Student Records" parent="student_student_root_menu" action="student_student_action"/>

  </data>
</odoo>
